@model SaleManagement.Models.Product;
@{
    ViewData["Title"] = "Edit a product";
}

<p class="h3">Chỉnh sửa thông tin sản phẩm</p>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">

    <div class="row">
        <input type="hidden" asp-for="ProductCode"/>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLine" class="control-label"></label>
                <input asp-for="ProductLine" class="form-control" />
                <span asp-validation-for="ProductLine" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factory" class="control-label"></label>
                <input asp-for="Factory" class="form-control" />
                <span asp-validation-for="Factory" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger small"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Note" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input type="file" name="file" />
                <input type="hidden" asp-for="ImagePath" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-outline-primary btn-sm" /> |
        <a asp-action="InventoryManage" class="btn btn-sm btn-outline-secondary">Quay lại</a>
    </div>
</form>